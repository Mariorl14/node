<main class="form-signin w-100 m-auto shadow p-3 mb-5 bg-body rounded">
  <form id="formLogin" action="/login" method="POST">
    <img class="mb-4" src="img/Favtel_isotipo.svg" alt="" width="150" height="150">
    <h1 class="h3 mb-3 fw-normal">Registrese para ingresar</h1>

    <div class="form-floating">
      <input type="email" class="form-control" id="user" name="user" placeholder="name@example.com">
      <label for="user">Correo</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="pass" name="pass" placeholder="Password">
      <label for="pass">Contrase√±a</label>
    </div>
    <button id="boton" class="w-100 btn btn-lg btn-primary" type="submit">Ingresar</button>

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title><%= title %> - Favtel CRM</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

  <style>
    div.prueba12, div.PruebaDvi {
      display: none;
    }
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
      padding: 2rem;
    }
    .card {
      border-radius: 15px;
    }
    h3 {
      font-weight: 600;
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .btn-back {
      margin-bottom: 1rem;
      background-color: #6c757d;
      color: white;
      border: none;
      border-radius: 6px;
      padding: 8px 16px;
      text-decoration: none;
    }
    .btn-back:hover {
      background-color: #5a6268;
    }
  </style>
</head>

<body>
  <div class="container py-5">
    <a href="/FijoInstalada" class="btn-back">‚¨Ö Volver</a>
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        <div class="card shadow">
          <div class="card-body p-4">
            <h3><%= title %></h3>

            <form action="<%= postPath %>" method="POST">
              <input id="SaleId" name="SaleId" value="<%= SaleId.SaleId %>" type="hidden">

              <!-- ========================= -->
              <!-- CLIENTE INFO -->
              <!-- ========================= -->
              <div class="row">
                <div class="col-md-4 mb-4">
                  <label>Nombre del Cliente</label>
                  <input type="text" name="column1" class="form-control" value="<%= SaleId.Nombre_Cliente %>">
                </div>
                <div class="col-md-4 mb-4">
                  <label>Segundo Nombre</label>
                  <input type="text" name="column2" class="form-control" value="<%= SaleId.Segundo_Nombre_Cliente %>">
                </div>
                <div class="col-md-4 mb-4">
                  <label>Primer Apellido</label>
                  <input type="text" name="column3" class="form-control" value="<%= SaleId.Primer_Apellido_Cliente %>">
                </div>
              </div>

              <div class="row">
                <div class="col-md-4 mb-4">
                  <label>Segundo Apellido</label>
                  <input type="text" name="column4" class="form-control" value="<%= SaleId.Segundo_Apellido_Cliente %>">
                </div>
                <div class="col-md-4 mb-4">
                  <label>Correo del Cliente</label>
                  <input type="text" name="columnC" class="form-control" value="<%= SaleId.Correo_Cliente %>">
                </div>
                <div class="col-md-4 mb-4">
                  <label>G√©nero</label>
                  <select name="column39" class="form-select">
                    <option <%= SaleId.Genero == 'Masculino' ? 'selected' : '' %>>Masculino</option>
                    <option <%= SaleId.Genero == 'Femenino' ? 'selected' : '' %>>Femenino</option>
                  </select>
                </div>
              </div>

              <!-- ========================= -->
              <!-- DOCUMENTO / CONTACTO -->
              <!-- ========================= -->
              <div class="row">
                <div class="col-md-4 mb-4">
                  <label>Tipo de Documento</label>
                  <input type="text" name="column5" class="form-control" value="<%= SaleId.Documento_Identidad %>">
                </div>
                <div class="col-md-4 mb-4">
                  <label>N√∫mero de Documento</label>
                  <input type="text" name="column6" class="form-control" value="<%= SaleId.Numero_Documento %>">
                </div>
                <div class="col-md-4 mb-4">
                  <label>Nacionalidad</label>
                  <input type="text" name="column7" class="form-control" value="<%= SaleId.Nacionalidad %>">
                </div>
              </div>

              <div class="row">
                <div class="col-md-4 mb-4">
                  <label>Celular de Tr√°mite</label>
                  <input type="text" name="column8" class="form-control" value="<%= SaleId.Celular_Tramite %>">
                </div>
                <div class="col-md-4 mb-4">
                  <label>Tipo de Tr√°mite</label>
                  <input type="text" name="column9" class="form-control" value="<%= SaleId.Tipo_Tramite %>">
                </div>
                <div class="col-md-4 mb-4">
                  <label>Plan a Contratar</label>
                  <input type="text" name="column14" class="form-control" value="<%= SaleId.Plan_Contratar %>">
                </div>
              </div>

              <!-- ========================= -->
              <!-- FECHAS -->
              <!-- ========================= -->
              <div class="row">
                <div class="col-md-4 mb-4">
                  <label>Fecha Activaci√≥n</label>
                  <input type="date" name="column33" class="form-control" value="<%= SaleId.formattedFechaActivacion %>">
                </div>
                <div class="col-md-4 mb-4">
                  <label>Fecha Instalaci√≥n</label>
                  <input type="date" name="column36" class="form-control" value="<%= SaleId.formattedFechaInstalacion %>">
                </div>
                <div class="col-md-4 mb-4">
                  <label>Fecha √öltima Actualizaci√≥n</label>
                  <input type="date" name="FechaUA" class="form-control" value="<%= SaleId.formattedFechaUltimaActualizacion %>">
                </div>
              </div>

              <!-- ========================= -->
              <!-- ESTADOS -->
              <!-- ========================= -->
              <div class="row">
                <div class="col-md-4 mb-4">
                  <label>Instalada</label>
                  <select name="column27" class="form-select">
                    <option <%= SaleId.Instalada == 'Instalada' ? 'selected' : '' %>>Instalada</option>
                    <option <%= SaleId.Instalada == 'No Instalada' ? 'selected' : '' %>>No Instalada</option>
                    <option <%= SaleId.Instalada == 'Pendiente' ? 'selected' : '' %>>Pendiente</option>
                  </select>
                </div>
                <div class="col-md-4 mb-4">
                  <label>Rechazada</label>
                  <select name="column28" class="form-select">
                    <option <%= SaleId.Rechazada == 'Rechazada' ? 'selected' : '' %>>Rechazada</option>
                    <option <%= SaleId.Rechazada == 'Cliente no Contesta' ? 'selected' : '' %>>Cliente no Contesta</option>
                  </select>
                </div>
                <div class="col-md-4 mb-4">
                  <label>Pago Comisi√≥n</label>
                  <select name="column38" class="form-select">
                    <option <%= SaleId.Pago_Comision == 'PAGO' ? 'selected' : '' %>>PAGO</option>
                    <option <%= SaleId.Pago_Comision == 'NO PAGO' ? 'selected' : '' %>>NO PAGO</option>
                  </select>
                </div>
              </div>

              <!-- ========================= -->
              <!-- DETALLE -->
              <!-- ========================= -->
              <div class="row">
                <div class="col-md-6 mb-4">
                  <label>Detalle Entrega</label>
                  <input type="text" name="column29" class="form-control" value="<%= SaleId.Detalle %>">
                </div>
                <div class="col-md-6 mb-4">
                  <label>Entregador</label>
                  <input type="text" name="column30" class="form-control" value="<%= SaleId.Entregador %>">
                </div>
              </div>
              <!-- üìÑ Extra fields -->
              <div class="col-md-6 mb-4">
                <label class="form-label">N√∫mero de Abonado</label>
                <input type="text" name="numero_abonado" class="form-control" value="<%= SaleId.Numero_Abonado %>">
              </div>

              <div class="col-md-6 mb-4">
                <label class="form-label">N√∫mero de Contrato</label>
                <input type="text" name="numero_contrato" class="form-control" value="<%= SaleId.Numero_Contrato %>">
              </div>

              <div class="col-md-6 mb-4">
                <label class="form-label">Nombre Vendedor</label>
                <input type="text" name="column23" class="form-control" value="<%= SaleId.Nombre_Vendedor %>">
              </div>
              <!-- ========================= -->
              <!-- SUBMIT -->
              <!-- ========================= -->
              <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Guardar Cambios</button>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>

                <label class="form-user">Fecha de Pago 6</label>
              </div>
            </div>

            <!-- Submit -->
            <div class="mt-4 pt-2">
              <input class="btn btn-primary btn-lg" type="submit" value="Guardar" />
              <a href="/Revenue/<%= mes %>/<%= anio %>" class="btn btn-secondary btn-lg ms-3">Volver</a>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
